<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include("./partials/head") %>
    <title>Document</title>
    <style>
      .card-img-container {
        height: 200px; /* Fixed height for all image containers */
        overflow: hidden;
      }

      .card-img-top {
        width: 100%;
        height: 100%;
        object-fit: cover; /* Makes images cover the container area while maintaining aspect ratio */
      }
    </style>
  </head>
  <body>
    <%- include("./partials/navbar") %> <%- include("./partials/script") %>

    <div class="container mt-3">
      <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 row-cols-lg-4 g-4">
        <% blogs.forEach(blog => { %>
        <div class="col">
          <div class="card h-100">
            <div class="card-img-container">
              <img
                src="<%= blog.coverImg %>"
                class="card-img-top"
                alt="<%= blog.title %>"
              />
            </div>
            <div class="card-body">
              <h5 class="card-title"><%= blog.title %></h5>
              <a href="/blog/<%= blog._id %>" class="btn btn-primary">View</a>
            </div>
          </div>
        </div>
        <% }) %>
      </div>
    </div>
  </body>
</html>
